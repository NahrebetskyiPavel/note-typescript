{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ts-node-this-file",
      "type": "shell",
      "command": "yarn ts-node '${file}'"
    },
    {
      "label": "ts-node-dev-this-file",
      "type": "shell",
      "command": "yarn ts-node-dev '${file}'"
    },
    {
      "label": "jest-this-file",
      "type": "shell",
      "command": "yarn jest '${file}'",
      "windows": {
        "command": "echo '現状動かない'"
      },
    },
    {
      "label": "tsc",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": [
        "$tsc"
      ]
    }
  ]
}
